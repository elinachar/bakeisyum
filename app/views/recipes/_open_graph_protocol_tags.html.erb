<%= content_for :facebook_meta_tags do %>
  <meta property="og:title" content="<%= @recipe.name %> - Bake is Yum" />
  <meta property="og:type" content="article" />
  <meta property="og:url" content="<%=request.original_url%>" />
  <meta property="og:image" content="<%= root_url + @recipe.image_url_url.to_s[1..-1] %>">
  <meta property="og:image:alt" content="<%= @recipe.image_url_url.to_s %>" />
  <meta property="og:image:width" content="1920"/>
  <meta property="og:image:height" content="1080"/>
  <meta property="og:description" content="<%= @recipe.short_description %>" />
  <meta property="og:locale" content="en_US"/>
  <meta property="og:site_name" content="Bake is Yum"/>
  <meta property="article:publisher" content="Elina Charalampous">
  <meta property="article:author" content="Elina Charalampous"/>
  <meta property="article:published_time" content="<%= @recipe.created_at.iso8601 %>"/>
<% end %>
