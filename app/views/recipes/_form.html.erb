<%= form_for @recipe do |f| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-12 recipe-form">
      <div class="recipe-fields">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group row">
          <%= f.label :image_url %><br>
          <div class="col-xs-6" style="padding-left: 0">
            <%= f.file_field :image_url %>
          </div>
          <div class="col-xs-6" style="padding-right: 0">
            <%= File.basename(@recipe.image_url_url.to_s)%><br>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :square_image_url %><br>
          <div class="col-xs-6" style="padding-left: 0">
            <%= f.file_field :square_image_url %>
          </div>
          <div class="col-xs-6" style="padding-right: 0">
            <%= File.basename(@recipe.square_image_url_url.to_s)%><br>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :ingredients_image_url %><br>
          <div class="col-xs-6" style="padding-left: 0">
            <%= f.file_field :ingredients_image_url %>
          </div>
          <div class="col-xs-6" style="padding-right: 0">
            <%= File.basename(@recipe.ingredients_image_url.to_s)%><br>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :ingredients_text_image_url %><br>
          <div class="col-xs-6" style="padding-left: 0">
            <%= f.file_field :ingredients_text_image_url %>
          </div>
          <div class="col-xs-6" style="padding-right: 0">
            <%= File.basename(@recipe.ingredients_text_image_url.to_s)%><br>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :short_description %>
          <%= f.text_area :short_description, class: 'form-control', size: '5x10' %>
        </div>

        <div class="form-group">
          <%= f.label :cuisine %>
          <%= f.text_field :cuisine, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :keywords, "Keywords (separate with comma)" %>
          <%= f.text_field :keywords, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :serving %>
          <%= f.text_field :serving, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :preparation_time %>
          <%= f.text_field :preparation_time, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :cooking_time %>
          <%= f.text_field :cooking_time, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :waiting_time %>
          <%= f.text_field :waiting_time, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :video_url %>
          <%= f.text_field :video_url, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :original_recipie_author %>
          <%= f.text_field :original_recipie_author, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :original_recipie_url %>
          <%= f.text_field :original_recipie_url, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :photos_from %>
          <%= f.text_field :photos_from, class: 'form-control' %>
        </div>


        <div class="form-group">
          <%= f.label :photos_from_url %>
          <%= f.text_field :photos_from_url, class: 'form-control' %>
        </div>
      </div> <!-- end recipe-fields -->

      <hr>
      <div class="descriptions-fields" id="descriptions">
        <%= f.fields_for :descriptions do |description| %>
          <%= render 'description_fields', f: description %>
        <% end %>
        <div class="links text-center">
          <%= link_to_add_association "<i class='fa fa-plus'></i> Add Description".html_safe, f, :descriptions, class: "btn btn-nested-fields w-85 m-auto" %>
        </div>
      </div> <!-- end descriptions-fields -->
      <hr>

      <div class="parts-fields" id="parts">
        <%= f.fields_for :parts do |part| %>
          <%= render 'part_fields', f: part %>
        <% end %>
        <div class="links text-center">
          <%= link_to_add_association "<i class='fa fa-plus'></i> Add Part".html_safe, f, :parts, class: "btn btn-nested-fields w-85 m-auto" %>
        </div>
      </div> <!-- end parts-fields -->
      <hr>

      <div class="notes-fields" id="notes">
        <%= f.fields_for :notes do |note| %>
          <%= render 'note_fields', f: note %>
        <% end %>
        <div class="links text-center">
          <%= link_to_add_association "<i class='fa fa-plus'></i> Add Note".html_safe, f, :notes, class: "btn btn-nested-fields w-85 m-auto" %>
        </div>
      </div> <!-- end notes-fields-->
      <hr>

      <div class="form-group public-field">
        <%= f.check_box :public %>
        <%= f.label :public %>
      </div>

      <div class="actions btn-submit">
        <%= f.submit class: 'btn w-85 m-auto' %>
      </div>

    </div>
  </div> <!-- end row -->
<% end %>
