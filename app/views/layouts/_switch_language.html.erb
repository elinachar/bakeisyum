<div class="switch-language text-center">

  <%#= link_to request.params.merge( locale: 'en' ), rel: 'alternate', hreflang: "en"  do %>

  <% if content_for?(:switch_path_en) %>
    <% current_url_path_en = yield(:switch_path_en) %>
  <% else %>
    <% current_url_path_en = url_for(locale: 'en', only_path: true) %>
  <% end %>
  <%= link_to current_url_path_en, rel: 'alternate', hreflang: "en"  do %>
  <%#= link_to url_for(locale: 'en', only_path: true), rel: 'alternate', hreflang: "en"  do %>
    <% if I18n.locale.to_s == 'en' %>
      <div class="link-to-language active" id="link-to-en">EN</div>
    <% else %>
      <div class="link-to-language diactivated"  data-locale="en" id="link-to-en">EN</div>
    <% end %>
  <% end %>

  <% if content_for?(:switch_path_el) %>
    <% current_url_path_el = yield(:switch_path_el) %>
  <% else %>
    <% current_url_path_el = url_for(locale: 'el', only_path: true) %>
  <% end %>
  <%= link_to current_url_path_el, rel: 'alternate', hreflang: "en"  do %>
  <%#= link_to url_for(locale: 'el', only_path: true), rel: 'alternate', hreflang: "el"  do %>
  <!-- <%#= link_to request.params.merge( locale: 'el' ), rel: 'alternate', hreflang: "el"  do %> -->
    <% if I18n.locale.to_s == 'el' %>
      <div class="link-to-language active" id="link-to-el">GR</div>
    <% else %>
      <div class="link-to-language diactivated" id="link-to-el" data-locale="el">GR</div>
    <% end %>
  <% end %>
</div>
