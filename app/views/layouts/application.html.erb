<!DOCTYPE html>
<html>
  <head>
    <title>Bakeisyum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Font awesome Iconts -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- Google Fonts API -->
    <link rel="stylesheet"
         href="https://fonts.googleapis.com/css?family=Tangerine|Raleway|Source+Serif+Pro">

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  </head>

  <body>
    <!-- Start navbar here -->
    <div class="container-fluid navigation-bar">
      <div class="row">
        <%= link_to "Bake is Yum", root_path, { :class=>"logo" }%>
        <i class="fa fa-bars navigation-bar-bars"></i>
        <hr class="navigation-bar-hr-collapse">
      </div>
      <div class="row navigation-bar-main-body">
        <div class="col-xs-12 col-sm-offset-4 col-sm-4 nav-links">
          <ul>
             <li><%= link_to "About", basic_pages_about_path %></li>
             <li><%= link_to "Recipies", recipes_path %></li>
             <!-- <li><%= link_to "FAQ", basic_pages_faq_path %></li> -->
             <li><%= link_to "Contact", basic_pages_contact_path %></li>
          </ul>
        </div>

        <%= form_with(url: recipes_path, method: 'get', local: true, class: 'search-form form-horizontal col-xs-12 col-sm-3') do |form| %>
          <div class="form-group">
            <div class="col-xs-10 search-input">
              <%= form.text_field :q, id: 'q', value: params[:q], placeholder: "Search...", size: 40, class: 'form-control' %>
            </div>
            <%= button_tag(class: 'search-button col-xs-2') do %>
              <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            <% end %>
          </div>
        <% end %>

        <div class="col-xs-12 col-sm-1 login">
          <span>Login</span><i class="fa fa-user-circle-o"></i>
        </div>



      </div>



    </div> <!-- end container-fluid -->
    <!-- End navbar here -->

    <!-- Main body here -->
    <div class="anchor">
      <%= yield %>
    </div>

    <!-- Start footer here -->
    <footer>
      <div class="container-fluid">
        &copy; 2018 Elina Charalampous
      </div> <!-- end container-fluid -->
    </footer>
    <!-- End footer here -->
  </body>
</html>
