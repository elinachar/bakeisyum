<!-- Head  -->
<% content_for :title, @instagram_post.recipe_title + " - Bake is Yum" %>
<%# content_for :switch_path_en, I18n.with_locale("en") {url_for(@instagram_post) } %>
<%# content_for :switch_path_el, I18n.with_locale("el") {url_for(@instagram_post) } %>

<!-- Body -->
<div class="container recipe-show w-85">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-md-offset-2">
      <%= image_tag( @instagram_post.image_url_url.to_s , class: "img-responsive", alt: @instagram_post.recipe_title, lazy: false) %>
    </div>

    <div class="col-sm-12">
      <p><b>Recipe Title</b></p>
      <p><%= @instagram_post.recipe_title%></p>
    </div><br>

    <div class="col-sm-12">
      <p><b>Recipe Href</b></p>
      <p><%= link_to @instagram_post.recipe_href, @instagram_post.recipe_href %></p>
    </div>
  </div>

  <div class="recipe-links-show">
    <% if signed_in? && (current_user.admin? || current_user.author?) %>
      <%= link_to '<i class="fa fa-edit"></i> '.html_safe + t('instagram_posts.show.edit_instagram_post'), edit_instagram_post_path(@instagram_post), class: 'btn btn-default' %>
      <%= link_to '<i class="fa fa-trash-o" ></i> '.html_safe + t('instagram_posts.show.delete_instagram_post'), @instagram_post, method: :delete, data: { confirm: 'Are you sure that you want to delete this instagram post? You cannot undo this action.' }, class: 'btn btn-default'  %>
      <%= link_to '<span class="glyphicon glyphicon-arrow-left"></span> '.html_safe + t('insinstagram_posts.show.go_back_to_all_instagram_posts'), instagram_posts_path, class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
