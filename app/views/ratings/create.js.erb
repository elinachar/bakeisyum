//= require ratings

// Get the average rating and get is as integer or floating with one decimal
var avg = <%= @recipe.ratings.average(:rating) %>;
if ( Number.isInteger(avg)) {
  avg = parseInt(avg);
} else {
  avg = parseFloat(avg.toFixed(1));
}

if ( avg > 4.5 ) {
  avg = 5
}

// Update average rating under stars
$(".rating-count").html(avg + ' from <%= @recipe.ratings.count %> votes');

updateStarClass(avg);
