<% content_for :title, t('devise.sessions.title_new') %>
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2 authentication text-center">
      <h2><%= t('devise.sessions.log_in') %></h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('devise.email') %>
        </div><br />

        <div class="field">
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password,  placeholder: t('devise.password'), autocomplete: "off" %>
        </div><br />

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label t('devise.sessions.remember_me') %>
          </div><br />
        <% end %>

        <div class="actions">
          <%= f.submit t('devise.sessions.log_in'), class: "btn btn-default" %>
        </div>
      <% end %>

      <%= link_to t('devise.sessions.forgot_your_password'), new_password_path(resource_name) %>

      <div>
        <h4><%= t('devise.sessions.have_not_account_yet') %> <%= link_to t('devise.sessions.sign_up'), new_registration_path(resource_name) %> <%=  t('devise.sessions.for_free') %></h4>
      </div>
    </div>
  </div>

</div>
