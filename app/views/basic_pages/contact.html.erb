    <p><i class="fa fa-mobile-phone"></i>+30 694 8510515</p>
    <p><i class="fa fa-envelope"></i><a href="mailto:elinachar@gmail.com">elinachar@gmail.com</a></p>
  </address> -->

  <%= form_with(url:"/thank-you", method: "post", local: true) do |form| %>
    <div class="row">
      <div class="form-group">
        <%= form.label :name, class: "sr-only" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Name*", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :email, class: "sr-only" %>
        <%= form.text_field :email, class: "form-control", placeholder: "Email *", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :phone, class: "sr-only" %>
        <%= form.telephone_field :phone, class: "form-control", placeholder: "Phone" %>
      </div>

      <div class="form-group">
        <%= form.label :message, class: "sr-only"  %>
        <%= form.text_area :message, class: "form-control", placeholder: "Message *", rows: 5, required: true %>
      </div>

      <div class="btn-submit">
        <%= form.submit "Send", class: "btn btn-default" %>
      </div>
    </div>
  <% end %>

</div> <!-- end container -->
